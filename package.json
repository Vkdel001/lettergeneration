{
  "name": "pdf-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "electron": "electron .",
    "electron-dev": "node electron-dev.cjs",
    "electron-simple": "electron .",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --publish=never"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.536.0",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^4.21.2",
    "globals": "^16.3.0",
    "multer": "^1.4.5-lts.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.4",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.nic.pdfgenerator",
    "productName": "NIC PDF Generator",
    "directories": {
      "output": "dist-electron"
    },
    "forceCodeSigning": false,
    "buildDependenciesFromSource": false,
    "files": [
      "dist/**/*",
      "server.js",
      "electron.cjs",
      "pdf_generator_wrapper.py",
      "*.py",
      "fonts/**/*",
      "*.jpg",
      "*.jpeg",
      "*.png",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "afterSign": false,
    "afterAllArtifactBuild": false
  }
}
